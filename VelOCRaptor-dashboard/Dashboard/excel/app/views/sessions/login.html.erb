<% @page_title = "UserAuth | Login" -%>
<div class= "login">
  <h1 class = "heading1">Log In</h1>
  <%= form_tag(:action => 'login_attempt') do %>
    <p>Username</br> <%= text_field_tag(:username_or_email) %></p> 
    <p>Password</br> <%= password_field_tag :login_password %></p> 
    <br>
    <%= submit_tag "Log In", class: "loginbutton" %>
  <% end %>
  <br>
</div>